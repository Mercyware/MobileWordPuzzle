<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scraggle.ScraggleGameActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/scraggle_fragment_misc"
            class="edu.neu.madcourse.binodthapachhetry.Scraggle.ScraggleMiscFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_scraggle_misc"/>

        <fragment
            android:id="@+id/scraggle_fragment_game"
            class="edu.neu.madcourse.binodthapachhetry.Scraggle.ScraggleGameActivityFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/scraggle_large_board"/>

        <fragment
            android:id="@+id/scraggle_fragment_control"
            class="edu.neu.madcourse.binodthapachhetry.Scraggle.ScraggleControlFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_scraggle_control"/>

    </LinearLayout>

</FrameLayout>