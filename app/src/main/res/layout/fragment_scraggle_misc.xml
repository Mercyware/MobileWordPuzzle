<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView android:id="@+id/scragglescore"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/scraggle_score"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="@dimen/scraggle_size_large"/>

        <TextView android:id="@+id/scragglescorenum"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonrules"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/dictionary_button_margin"
        android:text="@string/scraggle_rules" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_mute"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableTop="@drawable/speakermute"
            />

        <Button
            android:id="@+id/button_unmute"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableTop="@drawable/speakerup"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TextView
            android:id="@+id/scraggleTextViewBox"
            android:padding="3dp"
            android:maxLines = "10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/scraggle_text_view_background_color"
            android:scrollbars = "vertical">
        </TextView>

    </ScrollView>

</LinearLayout>