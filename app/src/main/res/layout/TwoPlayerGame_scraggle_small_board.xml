        android:layout_margin="@dimen/scraggle_small_board_margin"
        android:text="A" android:gravity="center"
        android:layout_column="1" android:layout_row="1"/>
    <TextView android:id="@+id/scraggle_small6" style="@style/ScraggleTileButton"
