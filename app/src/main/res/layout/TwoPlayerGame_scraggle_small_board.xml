    <TextView android:id="@+id/scraggle_small9" style="@style/ScraggleTileButton"
        android:background="@drawable/border_style"
        android:clickable="true"
        android:layout_margin="@dimen/scraggle_small_board_margin"
        android:text="A" android:gravity="center"
        android:layout_column="2" android:layout_row="2"/>
