<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/fragment_TwoPlayerGame_scraggle_misc"
    tools:context="edu.neu.madcourse.binodthapachhetry.TwoPlayerGame.TwoPlayerGameScraggleGameActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/two_player_game_opponent_scragglescore"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/scraggle_size_large"/>

        <TextView android:id="@+id/two_player_game_opponent_scragglescorenum"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView android:id="@+id/two_player_game_scragglescore"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="@dimen/scraggle_size_large"/>

        <TextView android:id="@+id/two_player_game_scragglescorenum"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TextView
            android:id="@+id/two_player_game_scraggleTextViewBox"
            android:padding="3dp"
            android:maxLines = "10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/scraggle_text_view_background_color"
            android:scrollbars = "horizontal">
        </TextView>

    </ScrollView>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/two_player_game_button_mute"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:drawableTop="@drawable/speakermute"
            />

        <!--
        <Button
            android:id="@+id/scraggle_button_unmute"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:drawableTop="@drawable/speakerup"
            />
        -->

    </LinearLayout>



</LinearLayout>