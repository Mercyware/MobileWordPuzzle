
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/menu_background"

    android:elevation="@dimen/elevation_high"

    android:orientation="vertical"

    android:text="@string/about_title"

    tools:context="edu.neu.madcourse.binodthapachhetry.MainActivityFragment">




    <Button

        android:id="@+id/about_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:text="@string/about_label"/>


    <Button

        android:id="@+id/generate_error_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"


        android:text="@string/generate_error_label"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <Button

        android:id="@+id/tictactoe_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:layout_weight="1"

        android:text="@string/tictactoe_label"/>

    <Button

        android:id="@+id/dictionary_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_weight="1"

        android:text="@string/dictionary_label"/>

</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <Button

        android:id="@+id/scraggle_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:layout_weight="1"

        android:text="@string/scraggle_label"/>

    <Button

        android:id="@+id/communication_scraggle_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:layout_weight="1"

        android:text="@string/communication_scraggle_label"/>
    </LinearLayout>

    <Button

        android:id="@+id/two_player_scraggle_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:text="@string/two_player_scraggle_label"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <Button

        android:id="@+id/trickiest_part_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_weight="1"

        android:text="@string/trickiest_part_label"/>

    <Button

        android:id="@+id/final_project_button"
        android:layout_weight="1"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:text="@string/final_project_label"/>

    </LinearLayout>

    <Button

        android:id="@+id/quit_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:text="@string/quit_label"/>





</LinearLayout>
